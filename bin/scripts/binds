# input configuration goes here
bind w +forward
bind s +backward
bind a +left
bind d +right
bind space jump
bind e +use
bind lshift +sprint
bind lctrl +crouch
bind mouse1 break_block
bind mouse2 place_block
bind mouse3 copy_block
bind r respawn
bind l noclip
bind ; 'save_pos cam_pos'
bind p 'load_pos cam_pos'
bind f1 'toggle_bool show_HUD'
bind f2 screenshot
bind f3 'toggle_bool show_debug_info'
bind f9 'toggle_bool show_chunk_outlines'
bind f11 'toggle_bool fullscreen'
bind esc close_gui
bind ` 'open_gui console'
bind , 'toggle_bool wireframe'
bind = 'set_int render_distance + 1'
bind - 'set_int render_distance - 1'

bind joy_xbox360_L1 break_block
bind joy_xbox360_R1 place_block
bind joy_xbox360_A jump
bind joy_xbox360_B copy_block
bind joy_xbox360_X +sprint
bind joy_xbox360_Y +use
bind joy_xbox360_start close_gui
