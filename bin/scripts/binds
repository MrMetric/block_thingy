# input configuration goes here
bind w +forward
bind s +backward
bind a +left
bind d +right
bind lshift +sprint
bind r respawn
bind space jump
bind l noclip
bind n nazi
bind ; 'save_pos cam_pos'
bind p 'load_pos cam_pos'
bind q 'cam.rot z -5'
bind e 'cam.rot z +5'
bind f2 screenshot
bind f11 toggle_fullscreen
bind esc quit
bind , wireframe
bind c toggle_cull_face
bind = render_distance++
bind - render_distance--
bind j block_type++
bind x "fov 75"
bind c "fov -1"
bind v "fov +1"
bind joy_xbox360_L3 block_type--
bind joy_xbox360_R3 block_type++
bind joy_xbox360_L1 break_block
bind joy_xbox360_R1 place_block
